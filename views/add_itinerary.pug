                    input(type='text')
                li
                    p Price:
                    input(type='text')
                li
                    p Hours:
                    input(type='text')
                li
                    p Address:
                    input(type='text')
                li
                    p Phone:
                    input(type='text')
                li
                    p Website:
                    input(type='text')
                li
                    p AudioGuides:
                    input(type='text')
                li
                    p BookLink:
                    input(type='text')
                li
                    p Transportation:
                    input(type='text')
                li
                    p Reviews:

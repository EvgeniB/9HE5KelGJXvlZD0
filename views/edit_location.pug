extends layout

block content

    form(method='POST')
        br
        p Name:
        input(type='text', name='name', value=location.Name)
        br
        p Country:
        select(name='country')
            each country in countries ? countries : []
                option(value=country._id) #{country.Name}
        br
        input(type='submit', value='Save')
        a(href='/edit_locations')
            input(type='button', value='Cancel')
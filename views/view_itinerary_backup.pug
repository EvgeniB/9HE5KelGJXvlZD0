                include mixings/view_itinerary_mixings
                +day_m
        li
            p Title:
            input(type='text', name='title', value=itinerary.Title)
        li
            p Description:
            input(type='text', name='description', value=itinerary.Description)
        li
            ul
                // each country in itinerary.Countries.length ? values : ['There are no values']
                li
                    p Country:
                    input(type='text')
        li
            ul
                // each location in itinerary.Locations.length ? values : ['There are no values']
                li
                    p Location:
                    input(type='text')
        li
            ul
                //each feature in itinerary.Featuring.length ? values : ['There are no values']
                li
                    p Feature:
                    input(type='text')
        li
            p Day Length:
            input(type='text')
        li
            p Night Length:
            input(type='text')
        li
            ul
                //each theme in itinerary.Theme.length ? values : ['There are no values']
                li
                    p Theme:
                    input(type='text')
        li
            p Image Url:
            input(type='text', name='imageurl', value=itinerary.ImageUrl)
        li
            ul
                //each user in itinerary.User.length ? values : ['There are no values']
                li
                    p User:
                    input(type='text')

extends layout

block content
    include mixings/view_itinerary_mixings
        +day_m()

    section.highlights
        .container
            .row
                .col-md-12
                    .wrapper_slider
                        .slider.owl-carousel.owl-theme
                            .item(data-big_slide='img/background_1.jpg')
                                img(src='/assets/img/slide_1.jpg', alt='')
                            .item(data-big_slide='img/bg_2.jpg')
                                img(src='/assets/img/slide_2.jpg', alt='')
                            .item(data-big_slide='img/background_1.jpg')
                                img(src='/assets/img/slide_3.jpg', alt='')
                            .item(data-big_slide='img/bg_2.jpg')
                                img(src='/assets/img/slide_4.jpg', alt='')
                            .item(data-big_slide='img/background_1.jpg')
                                img(src='/assets/img/slide_5.jpg', alt='')
            .about_travel
                .row
                    .col-md-12.col-lg-5
                        .content-in-item-travel
                            .item-about
                                h3 DAYS:
                                p 14 Days (12 Full Days); 13 Nights
                            .item-about
                                h3 FEATURING:
                                p Barcelona, Madrid, Cordoba, Seville, Granada
                            .item-about
                                h3 THEMES:
                                p Romantic, Beach, Active Adventure
                    .col-md-12.col-lg-7
                        .content-in-item-travel

doctype html
html
  head
    meta(charset='utf-8')
    link(rel='apple-touch-icon', sizes='76x76', href='./assets/img/apple-icon.png')
    link(rel='icon', type='image/png', href='./assets/img/favicon.png')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Travel Route
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no', name='viewport')
    // Fonts and icons
    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700,200', rel='stylesheet')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css')
    // CSS Files
    link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
    link(href='/assets/css/now-ui-kit.css?v=1.1.0', rel='stylesheet')

    //temp
    link(href='https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic', rel='stylesheet', type='text/css')
    link(href='https://development.zs-group.net/travel_main/css/style.css', rel='stylesheet')
    // end of temp

    //title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    block head
  body.index-page.sidebar-collapse
    // Navbar
    nav.navbar.navbar-expand-lg.bg-primary.fixed-top.navbar-transparent(color-on-scroll='400')
     .container
       .navbar-translate
         a.navbar-brand(href='http://demos.creative-tim.com/now-ui-kit/index.html', rel='tooltip', title='Designed by Invision. Coded by Creative Tim', data-placement='bottom', target='_blank')
           | TRAVEL ROUTE
         button.navbar-toggler.navbar-toggler(type='button', data-toggle='collapse', data-target='#navigation', aria-controls='navigation-index', aria-expanded='false', aria-label='Toggle navigation')
           span.navbar-toggler-bar.bar1
           span.navbar-toggler-bar.bar2
           span.navbar-toggler-bar.bar3
       #navigation.collapse.navbar-collapse.justify-content-end(data-nav-image='./assets/img/blurred-image-1.jpg')
         ul.navbar-nav
           li.nav-item
             a.nav-link(href='/')
               p Home
           li.nav-item
             a.nav-link(href='/search')
               p Search itineraries
           if _user
             if _user.admin
               li.nav-item
                 a.nav-link(href='/admin')
                   p Admin panel
             li.nav-item
               a.nav-link(href='/my_itineraries')
                 p My itineraries
             li.nav-item
               a.nav-link(href='/logout')
                 p Log out
           else
             li.nav-item
               a.nav-link(href='/register')
                 p Register
             li.nav-item
               a.nav-link(href='/login')
                 p Log in
           li.nav-item
             a.nav-link(href='javascript:void(0)', onclick='scrollToDownload()')
               i.now-ui-icons.arrows-1_cloud-download-93
               p BTN1
           li.nav-item
             a.nav-link(href='./documentation/tutorial-components.html', target='_blank')
               i.now-ui-icons.files_paper
               p BTN2
           li.nav-item
             a.nav-link.btn.btn-neutral(href='https://www.creative-tim.com/product/now-ui-kit-pro', target='_blank')
               i.now-ui-icons.arrows-1_share-66
               p Upgrade to PRO
           li.nav-item
             a.nav-link(rel='tooltip', title='Follow us on Twitter', data-placement='bottom', href='https://twitter.com/CreativeTim', target='_blank')
               i.fa.fa-twitter
               p.d-lg-none.d-xl-none Twitter
           li.nav-item
             a.nav-link(rel='tooltip', title='Like us on Facebook', data-placement='bottom', href='https://www.facebook.com/CreativeTim', target='_blank')
               i.fa.fa-facebook-square
               p.d-lg-none.d-xl-none Facebook
           li.nav-item
             a.nav-link(rel='tooltip', title='Follow us on Instagram', data-placement='bottom', href='https://www.instagram.com/CreativeTimOfficial', target='_blank')
               i.fa.fa-instagram
               p.d-lg-none.d-xl-none Instagram
           li.nav-item
             if _user
               p Welcome, #{_user.username}
    // End Navbar
    // Main Canvas
    .wrapper
      block wrapper
      .main
        block content

    // End Main Canvas




